<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane id="borderPane" fx:id="stackPane" stylesheets="@../style/inv-design.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="InventoryController">
   <children>
      <BorderPane fx:id="fade" prefHeight="600.0" prefWidth="800.0" stylesheets="@../style/inv-design.css">
         <top>
            <VBox prefHeight="112.0" prefWidth="800.0" spacing="8.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="107.0" prefWidth="800.0" spacing="12.0">
                     <children>
                        <Button id="back" mnemonicParsing="false" onAction="#handleBack" prefHeight="75.0" prefWidth="75.0" stylesheets="@../style/inv-design.css">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Region prefHeight="75.0" prefWidth="142.0" HBox.hgrow="ALWAYS" />
                        <Label prefHeight="26.0" prefWidth="159.0" text="Inventory">
                           <font>
                              <Font name="OCR A Extended" size="24.0" />
                           </font>
                        </Label>
                        <Region prefHeight="75.0" prefWidth="95.0" HBox.hgrow="ALWAYS" />
                        <Label fx:id="coinsLabel" prefHeight="26.0" prefWidth="250.0" text="Coins: 0">
                           <font>
                              <Font name="OCR A Extended" size="24.0" />
                           </font>
                        </Label>
                        <Button id="to_shop" mnemonicParsing="false" onAction="#handleOpenShop" prefHeight="75.0" prefWidth="152.0" stylesheets="@../style/inv-design.css">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="16.0" right="16.0" top="16.0" />
                     </padding>
                  </HBox>
                  <Separator prefWidth="200.0" />
               </children>
            </VBox>
         </top>
         <center>
            <ListView fx:id="skinList" stylesheets="@../style/retro-style.css" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <VBox prefHeight="48.0" prefWidth="800.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="selectedLabel" maxHeight="-Infinity" prefHeight="26.0" prefWidth="576.0" text="Selected Skin: -">
                     <font>
                        <Font name="OCR A Extended" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="20.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
         </bottom>
      </BorderPane>
   </children>
</StackPane>
