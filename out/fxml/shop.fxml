<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<StackPane id="borderPane" stylesheets="@../style/inv-design.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ShopController">
   <children>
      <BorderPane fx:id="fade" prefHeight="600.0" prefWidth="800.0" stylesheets="@../style/inv-design.css">
         <top>
            <VBox prefHeight="112.0" prefWidth="800.0" spacing="8.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="107.0" prefWidth="800.0" spacing="12.0">
                     <children>
                        <Button id="back" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#handleBack" prefHeight="76.0" prefWidth="100.0">
                           <font>
                              <Font name="ROGFontsv1.6-Regular" size="24.0" />
                           </font>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                        <Region prefHeight="25.0" prefWidth="188.0" HBox.hgrow="ALWAYS" />
                        <Label prefHeight="45.0" prefWidth="194.0" text="Magazin Skins">
                           <font>
                              <Font name="ROGFontsv1.6-Regular" size="24.0" />
                           </font>
                        </Label>
                        <Region prefHeight="25.0" prefWidth="181.0" HBox.hgrow="ALWAYS" />
                        <Label fx:id="coinsLabel" prefHeight="45.0" prefWidth="180.0" text="Monede: 0">
                           <font>
                              <Font name="ROGFontsv1.6-Regular" size="24.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="16.0" right="16.0" top="16.0" />
                     </padding>
                  </HBox>
                  <Separator prefWidth="200.0" />
               </children>
            </VBox>
         </top>
         <center>
            <ListView fx:id="shopList" stylesheets="@../style/retro-style.css" BorderPane.alignment="CENTER" />
         </center>
         <bottom>
            <VBox alignment="CENTER_LEFT" prefHeight="48.0" prefWidth="800.0" spacing="6.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="statusLabel" text="-">
                     <font>
                        <Font name="ROGFontsv1.6-Regular" size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="8.0" />
               </padding>
            </VBox>
         </bottom>
      </BorderPane>
   </children>
</StackPane>
